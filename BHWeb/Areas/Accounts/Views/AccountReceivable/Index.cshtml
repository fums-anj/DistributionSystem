@model IEnumerable<ManageCash>
@{
    ViewData["Title"] = "Daily Sale";
    double TotalSale = 0;
}


<div class="p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Manage Sale</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="DailyCash" asp-action="Upsert" class="btn btn-primary" autofocus>
                <i class="bi bi-plus-circle"></i> &nbsp; Add Sale
            </a>
        </div>
    </div>
    <br /><br />

    <table id="tblData" class="table table-bordered table-striped zero-configuration" style="width:100%">
        <thead>
            <tr>
                <th></th>
                <th>@Html.DisplayNameFor(model => model.SaleAmount)</th>
                <th>@Html.DisplayNameFor(model => model.CreatedBy)</th>
                <th>@Html.DisplayNameFor(model => model.CreatedDate)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                TotalSale += (double)obj.SaleAmount;
                <tr>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="DailyCash" asp-action="Upsert" asp-route-id="@obj.Id"
                               class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"></i> Edit</a>
                            <a asp-controller="DailyCash" asp-action="Delete" asp-route-id="@obj.Id"
                               class="btn btn-danger mx-2"> <i class="bi bi-trash-fill"></i> Delete</a>
                        </div>
                    </td>
                    <td>
                        @Html.DisplayFor(m => obj.SaleAmount)
                    </td>
                    <td>
                        @Html.DisplayFor(x => obj.ApplicationUser.FullName)
                    </td>
                    <td>
                        @Html.DisplayFor(x => obj.CreatedDate)
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Total Sale = @TotalSale</h2>
        </div>
    </div>
</div>