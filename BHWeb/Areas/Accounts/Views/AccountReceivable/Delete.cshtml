@model AccountReceivable
@{
    ViewData["Title"] = "Delete Received Amount";
}

<form method="post" asp-action="Delete">
	<input asp-for="Id" hidden />
	<input asp-for="ShopCustomerId" hidden />
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary">Delete Received Amount</h2>
			<hr />
		</div>
		<div class="mb-3">
			<label asp-for="ReceivedAmount"></label>
			<input asp-for="ReceivedAmount" disabled class="form-control" />
		</div>

		<button type="submit" class="btn btn-danger" style="width:150px">Delete</button>
		<a asp-controller="AccountReceivable" asp-action="SingleCustomerCashList" asp-route-CustomerId="@Model.ShopCustomerId" class="btn btn-secondary" style="width:150px">
			Go Back
		</a>
	</div>
</form>

@section Scripts{
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}
