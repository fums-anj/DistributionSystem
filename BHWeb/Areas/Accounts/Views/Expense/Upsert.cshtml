@model Expense

<form method="post" asp-area="Accounts" asp-controller="Expense" asp-action="Upsert">
    <input asp-for="Id" hidden />
    <input asp-for="CreatedBy" hidden />
    <input asp-for="CreatedDate" hidden />
    <input asp-for="ShopId" hidden />

    <div class="row">
        <div class="col-12">
            <div class="border p-3 mt-4 row">
                <div class="col-12 pb-2">
                    <h2 class="text-primary">@(Model.Id != 0 ? "Update" : "Create")  Expense</h2>
                    <hr />
                </div>
                <div class="col-4">
                    <div class="mb-3">
                        <label asp-for="Name"></label>
                        <input asp-for="Name" class="form-control" autofocus />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-4">
                    <div class="mb-3">
                        <label asp-for="Amount"></label>
                        <input asp-for="Amount" class="form-control" />
                        <span asp-validation-for="Amount" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-4">
                    <div class="mb-3">
                        <label asp-for="Description"></label>
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-4">
                    <div class="mb-3">
                        <label asp-for="CostCenter"></label>
                        <input asp-for="CostCenter" class="form-control" />
                        <span asp-validation-for="CostCenter" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-4">
                    <div class="mb-3">
                        <label asp-for="ApprovedBy"></label>
                        <input asp-for="ApprovedBy" class="form-control" />
                        <span asp-validation-for="ApprovedBy" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-4">
                    <div class="mb-3">
                        <label asp-for="ApprovedDate"></label>
                        <input asp-for="ApprovedDate" class="form-control" />
                        <span asp-validation-for="ApprovedDate" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-4">
                    <div class="mb-3">
                        <label asp-for="ExpenseTypeId"></label>
                        <select asp-for="ExpenseTypeId" asp-items="@ViewBag.ExpenseType as IEnumerable<SelectListItem>" class="form-control">
                            <option disabled selected>Select</option>
                        </select>
                        <span asp-validation-for="ExpenseTypeId" class="text-danger"></span>
                    </div>
                </div>
                @* <div class="col-4">
                    <div class="mb-3">
                        <label asp-for="ExpenseMonthId"></label>
                        <select asp-for="ExpenseMonthId" asp-items="@ViewBag.ExpenseMonth as IEnumerable<SelectListItem>" class="form-control">
                            <option selected disabled>Select</option>
                        </select>
                        <span asp-validation-for="ExpenseMonthId" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-4">
                    <div class="mb-3">
                        <label asp-for="ExpenseYearId"></label>
                        <select asp-for="ExpenseYearId" asp-items="@ViewBag.ExpenseYear as IEnumerable<SelectListItem>" class="form-control">
                            <option selected disabled>Select</option>
                        </select>
                        <span asp-validation-for="ExpenseYearId" class="text-danger"></span>
                    </div>
                </div> *@

                @if (Model.Id != 0)
                {
                    <div class="mb-3">
                        <label asp-for="IsDisable" class="form-check-label">
                            <input asp-for="IsDisable" class="form-control form-check-input" />
                            @Html.DisplayNameFor(model => model.IsDisable)
                        </label>
                        <span asp-validation-for="IsDisable" class="text-danger"></span>
                    </div>
                }

                <div class="col-12">
                    @if (Model.Id != 0)
                    {
                        <button type="submit" class="btn btn-primary" style="width:150px">Update</button>
                    }
                    else
                    {
                        <button type="submit" class="btn btn-primary" style="width:150px">Create</button>
                    }
                    <a asp-controller="Expense" asp-action="Index" class="btn btn-secondary" style="width:150px">
                        Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
