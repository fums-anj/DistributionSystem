@model IEnumerable<Variant>
@{
    ViewData["Title"] = "Index";
}


<div class="p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Variant List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Variant" asp-action="Upsert" class="btn btn-primary" autofocus>
                <i class="bi bi-plus-circle"></i> &nbsp; Create New Variant
            </a>
        </div>
    </div>
    <br /><br />

    <table id="tblData" class="table table-bordered table-striped zero-configuration" style="width:100%">
        <thead>
            <tr>
                <th></th>
                <th>@Html.DisplayNameFor(model => model.VariantCode)</th>
                <th>@Html.DisplayNameFor(model => model.IsDisable)</th>
                <th>@Html.DisplayNameFor(model => model.ShopProduct.CatalogId)</th>
                <th>@Html.DisplayNameFor(model => model.ShopProductId)</th>
                <th>@Html.DisplayNameFor(model => model.Name)</th>
                <th>@Html.DisplayNameFor(model => model.SKU)</th>
                <th>@Html.DisplayNameFor(model => model.PackingSKU)</th>
                <th>@Html.DisplayNameFor(model => model.Packing)</th>
                <th>@Html.DisplayNameFor(model => model.UnitOfMeasureId)</th>
                <th>@Html.DisplayNameFor(model => model.PurchasePrice)</th>
                <th>@Html.DisplayNameFor(model => model.ListPrice)</th>
                <th>@Html.DisplayNameFor(model => model.WholesalePrice)</th>
                <th>@Html.DisplayNameFor(model => model.LowStockWarningQuantity)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td>
                        <div class="btn-group" role="group">
                            <a asp-controller="Variant" asp-action="GenerateBarcode" asp-route-id="@obj.Id" asp-route-SKU="@obj.SKU"
                               class="btn btn-info mx-2"> <i class="bi bi-upc-scan"></i></a>
                            <a asp-controller="Variant" asp-action="GenerateBarcode" asp-route-id="@obj.Id" asp-route-SKU="@obj.PackingSKU"
                               class="btn btn-success mx-2"> <i class="bi bi-upc-scan"></i> Pack</a>
                            <a asp-controller="Variant" asp-action="Upsert" asp-route-id="@obj.Id"
                               class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"></i></a>
                            <a asp-controller="Variant" asp-action="Delete" asp-route-id="@obj.Id"
                               class="btn btn-danger mx-2"> <i class="bi bi-trash-fill"></i></a>
                        </div>
                    </td>
                    <td>
                        @Html.DisplayFor(m => obj.VariantCode)
                    </td>
                    <td>
                        @Html.DisplayFor(m => obj.IsDisable)
                    </td>
                    <td>
                        @Html.DisplayFor(m => obj.ShopProduct.Catalog.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(m => obj.ShopProduct.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(m => obj.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(m => obj.SKU)
                    </td>
                    <td>
                        @Html.DisplayFor(m => obj.PackingSKU)
                    </td>
                    <td>
                        @Html.DisplayFor(m => obj.Packing)
                    </td>
                    <td>
                        @Html.DisplayFor(m => obj.UnitOfMeasure.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(m => obj.PurchasePrice)
                    </td>
                    <td>
                        @Html.DisplayFor(m => obj.ListPrice)
                    </td>
                    <td>
                        @Html.DisplayFor(m => obj.WholesalePrice)
                    </td>
                    <td>
                        @Html.DisplayFor(m => obj.LowStockWarningQuantity)
                    </td>
                </tr>
            }
        </tbody>

    </table>
</div>