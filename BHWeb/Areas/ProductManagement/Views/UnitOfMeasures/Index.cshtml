@model IEnumerable<UnitOfMeasure>
@{
    ViewData["Title"] = "Index";
}


<div class="p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Unit List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="UnitOfMeasures" asp-action="Upsert" class="btn btn-primary" autofocus>
                <i class="bi bi-plus-circle"></i> &nbsp; Create New Unit
            </a>
        </div>
    </div>
    <br /><br />

    <table id="tblData" class="table table-bordered table-striped zero-configuration" style="width:100%">
        <thead>
            <tr>
                <th></th>
                <th>@Html.DisplayNameFor(model => model.IsDisable)</th>
                <th>@Html.DisplayNameFor(model => model.IsWaight)</th>
                <th>@Html.DisplayNameFor(model => model.Name)</th>
                <th>@Html.DisplayNameFor(model => model.ValueInBaseUnit)</th>
                <th>@Html.DisplayNameFor(model => model.CreatedBy)</th>
                <th>@Html.DisplayNameFor(model => model.CreatedDate)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="UnitOfMeasures" asp-action="Upsert" asp-route-id="@obj.Id"
                           class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"></i> Edit</a>
                            <a asp-controller="UnitOfMeasures" asp-action="Delete" asp-route-id="@obj.Id"
                           class="btn btn-danger mx-2"> <i class="bi bi-trash-fill"></i> Delete</a>
                        </div>
                    </td>
                    <td>
                        @Html.DisplayFor(m => obj.IsDisable)
                    </td>
                    <td>
                        @Html.DisplayFor(m => obj.IsWaight)
                    </td>
                    <td>
                        @Html.DisplayFor(m => obj.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(x => obj.ValueInBaseUnit)
                    </td>
                    <td>
                        @Html.DisplayFor(x => obj.ApplicationUser.FullName)
                    </td>
                    <td>
                        @Html.DisplayFor(x => obj.CreatedDate)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>