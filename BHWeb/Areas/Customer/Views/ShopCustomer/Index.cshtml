@model IEnumerable<ShopCustomer>
@{
    ViewData["Title"] = "Customer Index";
    int sr = 0;
}


<div class="p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Customer List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="ShopCustomer" asp-action="Upsert" class="btn btn-primary" autofocus>
                <i class="bi bi-plus-circle"></i> &nbsp; Create New Customer
            </a>
        </div>
    </div>
    <br /><br />

    <table id="tblData" class="table table-bordered table-striped zero-configuration" style="width:100%">
        <thead>
            <tr>
                <th>Sr#</th>
                <th>@Html.DisplayNameFor(model => model.CustomerName)</th>
                <th>@Html.DisplayNameFor(model => model.Balance)</th>
                <th>@Html.DisplayNameFor(model => model.CustomerPhone)</th>
                <th>@Html.DisplayNameFor(model => model.CustomerRouteId)</th>
                <th>@Html.DisplayNameFor(model => model.CustomerCity)</th>
                <th>@Html.DisplayNameFor(model => model.CustomerAddress)</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                sr++;
                <tr>
                    <td>
                        @sr
                    </td>
                    <td>
                        @Html.DisplayFor(m => obj.IsDisable) @Html.DisplayFor(m => obj.CustomerCode) - @Html.DisplayFor(m => obj.CustomerName)
                    </td>
                    <td>
                        @Html.DisplayFor(m => obj.Balance)
                    </td>
                    <td>
                        @Html.DisplayFor(m => obj.CustomerPhone)
                    </td>
                    <td>
                        @Html.DisplayFor(m => obj.CustomerRoute.RouteName)
                    </td>
                    <td>
                        @Html.DisplayFor(m => obj.CustomerCity)
                    </td>
                    <td>
                        @Html.DisplayFor(m => obj.CustomerAddress)
                    </td>
                    <td class="w-100 btn-group">
                        
                            <a asp-controller="ShopCustomer" asp-action="Upsert" asp-route-id="@obj.Id"
                               class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"></i></a>
                            <a asp-controller="ShopCustomer" asp-action="Delete" asp-route-id="@obj.Id"
                               class="btn btn-danger mx-2"> <i class="bi bi-trash-fill"></i></a>
                        <a asp-area="Accounts" asp-controller="AccountReceivable" asp-action="CustomerSalesDetail" asp-route-CustomerId="@obj.Id"
                               class="btn btn-secondary mx-2"><i class="bi bi-eye-fill"> Sale</i></a>
                       
                    </td>
                </tr>
            }
        </tbody>

    </table>
</div>