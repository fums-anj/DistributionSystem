    ViewData["Title"] = "Stock Transfer";
    double Purchase = 0;
    double TPurchase = 0;
    double Sale = 0;
    double TSale = 0;
    double TSaleQty = 0;

}


<div class="p-3">
    <form method="post" class="form-horizontal">
        <div class="row">
            <partial name="_FilterReportingStockNoVariant" />
