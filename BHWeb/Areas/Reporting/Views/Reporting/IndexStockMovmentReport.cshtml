<script>

    $(document).ready(function () {
        $('.searchDate').val(null);
        $("#resetSearch").click(function (event) {
            event.preventDefault();
            $('.searchDrp').val("- Select -");
            $('.searchDate').val(null);
            $('.searchInput').val(null);
        });
    });
</script>